<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Note</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.note %></td>
        <td><%= book.description %></td>
        <td class="btn-primary"><%= link_to '', book, class:"btn bi bi-eye" %></td>
        <td class="btn-success"><%= link_to ' ', edit_book_path(book), class:"btn bi-pencil-square" %></td>
        <td class="btn-danger"><%= link_to '', book, class:"btn bi bi-trash3", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "btn btn-primary", style: 'margin-left: 5px;' %>
